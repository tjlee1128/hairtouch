<p id="notice"><%= notice %></p>

<h1>Shops</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Shopowner</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Holiday</th>
      <th>Address</th>
      <th>Main image</th>
      <th>MainRegion</th>
      <th>SubRegion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
      	<td><img src= <%= shop.image.url %>></td>
        <td><%= shop.shopowner %></td>
        <td><%= shop.name %></td>
        <td><%= shop.phone %></td>
        <td><%= shop.start_time %></td>
        <td><%= shop.end_time %></td>
        <td><%= shop.holiday %></td>
        <td><%= shop.address %></td>
        <td><%= shop.main_image %></td>
        <td><%= shop.mainregion_id %></td>
        <td><%= shop.subregion_id %></td>
        <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

